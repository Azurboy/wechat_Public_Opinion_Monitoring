# 飞书开放平台配置示例
# 复制此文件为 feishu.yaml 并填写实际值
# https://open.feishu.cn/

app_id: "cli_xxxxxx"          # 应用 App ID
app_secret: "your_app_secret"      # 应用 App Secret

# 多维表格配置
bitable:
  app_token: "your_app_token"     # 多维表格 app_token（从URL获取）
  table_id: "your_table_id"      # 数据表 table_id

# 飞书机器人配置（用于日报推送）
webhook:
  url: "https://open.feishu.cn/open-apis/bot/v2/hook/xxx"           # 机器人 webhook URL

# LLM配置（用于生成舆情简报）
llm:
  provider: "siliconflow"
  model: "deepseek-ai/DeepSeek-V3"
  api_key: "sk-xxxxxx"
  base_url: "https://api.siliconflow.cn/v1"
